---
import '../../styles/posts.css'

import TagBar from '../tagbar.astro'

const { url, name, pub_date, desc, image, cont, tags } = Astro.props;
---

<div class="post-shape grid-post">
	<div class="post-content">
		<div class="post-info">
			<div class="post-title">
				{name}
			</div>
			<div class="post-date">
				{pub_date.toString().slice(8,10)}.{pub_date.toString().slice(5,7)}.{pub_date.toString().slice(0,4)}
			</div>
		</div>
		<img class="post-image" src={image} />
		{cont != '' && <div class="post-cont">{cont}</div>}
		<div class="post-desc">
			{desc}
		</div>
		<TagBar tags={tags} reverse="true" />
	</div>
</div>