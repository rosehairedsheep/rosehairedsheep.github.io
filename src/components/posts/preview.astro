---
import '../../styles/posts.css'

const { url, pub_date, desc, image, cont, tags, tags_team, tags_status, tags_tools, tags_languages, tags_skills } = Astro.props;
---

<div class="post-shape grid-post">
	<div class="post-content">
		<div class="post-date">
			{pub_date.toString().slice(8,10)}.{pub_date.toString().slice(5,7)}.{pub_date.toString().slice(0,4)}
		</div>
		<img class="post-image" src={image} />
		{cont != '' && <div class="post-cont">{cont}</div>}
		<div class="post-desc">
			{desc}
		</div>
		<div class="post-tags">
			{tags_team.map((tag: string) => (<div class="post-tag post-tag-team">{tag}</div>))}
			{tags_status.map((tag: string) => (<div class="post-tag post-tag-status">{tag}</div>))}
			{tags_tools.map((tag: string) => (<div class="post-tag post-tag-tools">{tag}</div>))}
			{tags_languages.map((tag: string) => (<div class="post-tag post-tag-languages">{tag}</div>))}
			{tags_skills.map((tag: string) => (<div class="post-tag post-tag-skills">{tag}</div>))}
		</div>
	</div>
</div>