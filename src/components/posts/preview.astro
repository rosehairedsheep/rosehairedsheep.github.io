---
import '../../styles/posts.css'
import '../../styles/contents.css'

import TagBar from '../tagbar.astro'

const { url, frontmatter } = Astro.props;
---

<div class="post-shape grid-item">
	<div class="post-title"><a href={url} class="plain">{frontmatter.title}</a></div>
	<div class="post-date">{frontmatter.time}</div>
	<a href={url}><img class="post-image" src={frontmatter.image} /></a>
	{frontmatter.contribution &&
	<div class="post-cont">{frontmatter.contribution}</div>
	}
	<div class="post-desc">{frontmatter.description}</div>
	{frontmatter.tags &&
	<TagBar tags={frontmatter.tags} reverse="true" />
	}
</div>