---
import '../styles/_global.css'

import Base from '../layouts/base.astro'
import Content from '../components/content.astro'
import PostPreview from '../components/posts/preview.astro'

const page_title = "projects"
const all_projects = Object.values(import.meta.glob('./projects/*.md', { eager: true }));
---

<Base page_title={page_title}>
	<Content>
		{all_projects.sort((a, b) => Date.parse(b.frontmatter.pub_date) - Date.parse(a.frontmatter.pub_date)).map((project: any) => <PostPreview
		url={project.url}
		pub_date={project.frontmatter.pub_date}
		image={project.frontmatter.image}
		desc={project.frontmatter.description}
		cont={project.frontmatter.contribution}
		tags={project.frontmatter.tags}
		tags_team={project.frontmatter.tags_team}
		tags_status={project.frontmatter.tags_status}
		tags_tools={project.frontmatter.tags_tools}
		tags_languages={project.frontmatter.tags_languages}
		tags_skills={project.frontmatter.tags_skills} />)}
	</Content>
</Base>
